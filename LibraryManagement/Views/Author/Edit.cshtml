@model LibraryManagement.Model.Authors
<form asp-controller="Author" asp-action="Edit" method="post" autocomplete="off">
	<div class="row">
		<div class="col-12">
			<input asp-for="AuthorId" hidden/>
			<div class="row mb-2 required">
				<label class="form-label col-2 fw-bold">Author Name</label>
				<div class="col-4">
					<input type="text" class="form-control form-control-sm" asp-for="AuthorName" required />
				</div>
			</div>
			<div class="row mb-2 required">
				<label class="form-label col-2 fw-bold">Bio</label>
				<div class="col-4">
					<input type="text" class="form-control form-control-sm" asp-for="AuthorBio" required />
				</div>
			</div>


			<div class="d-flex justify-content-center">
				<button type="submit" class="btn btn-sm btn-primary me-2">
					<i class="bi bi-save"></i> Submit
				</button>
				<a asp-controller="Author" asp-action="Index" class="btn btn-sm btn-secondary">
					<i class="bi bi-arrow-left-circle"></i> Back
				</a>
			</div>
		</div>
	</div>
</form>

